      },
      "triggers": {
        "type": "array",
        "format": "table",
        "items": {
          "type": "object",
          "properties": {
            "event": {
              "type": "string"
            },
            "argument": {
              "type": "string",
              "enum": ["none", "string", "integer", "decimal", "url", "email", "phone", "time", "date", "datetime"],
              "enumDisplay": ["None", "String", "Integer", "Decimal", "URL", "Email Address", "Phone Number", "Time", "Date", "Date and Time"]
            }
          }
        }
      }
    }
  }
}
